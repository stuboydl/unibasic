{
   "name": "unibasic",
   "publisher": "stuboydl",
	"displayName": "UniBasic",
	"description": "Rocket U2 Basic",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.30.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onCommand:extension.helloWorld"
	],
	"main": "./out/extension.js",
	"contributes": {
      "languages": [{
         "id": "unibasic",
         "aliases": ["UniBasic", "unibasic"],
         "extensions": [""],
         "configuration": "./language-configuration.json"
     }],
     "grammars": [{
         "language": "unibasic",
         "scopeName": "source.unibasic",
         "path": "./syntaxes/unibasic.tmLanguage.json"
     }], 
		"commands": [
			{
				"command": "extension.helloWorld",
				"title": "Hello World"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.1.4",
		"vscode": "^1.1.25",
		"tslint": "^5.8.0",
		"@types/node": "^8.10.25",
		"@types/mocha": "^2.2.42"
	}
}
